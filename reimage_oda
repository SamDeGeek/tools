#!/bin/sh

if [ -z $1 ]; then
	echo "Usage: ${0##*/} <ilom-hostname-or-IP>"
	exit 1
fi

ILOM=$1
ISO_FOLDER=${HOME}/public_html/mos_repo

cd ${ISO_FOLDER}
PS3="Select ISO file [Ctrl-C to quit]: "
ISO_FILES=$(find . -name 'oda_bm_*.iso' -print | sort)
select ISO in ${ISO_FILES[@]}; do
	[ -z ${ISO} ] && exit 1
	ISO_PATH=$(realpath ${ISO})
	break
done

echo "ILOM: ${ILOM}"
echo "ISO: ${ISO_PATH}"

